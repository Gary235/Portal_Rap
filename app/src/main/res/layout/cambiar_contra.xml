<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">


    <TextView
        android:id="@+id/textotitulodeeditarperfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"

        android:fontFamily="@font/poppins_bold"
        android:text="Editar Contraseña"
        android:textColor="#000"
        android:textSize="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ImageView
        android:id="@+id/fondo2"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/edttext_conmarcos"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtCambiarContrauno"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fondo2"


        android:background="@drawable/edttext_conmarcos"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:hint="Contraseña Actual"
        android:textColorHint="#808080"
        android:textColor="#000"
        android:paddingStart="20dp"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edtCambiarContrados"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtCambiarContrauno"

        android:background="@drawable/edttext_conmarcos"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:hint="Nueva Contraseña"
        android:textColorHint="#808080"
        android:paddingStart="20dp"
        android:textColor="#000"
        android:inputType="textPassword"
        />

    <ImageButton
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/btnCancelarContra"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="110dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/edtCambiarContrados"

        android:src="@drawable/ic_cruz_roja"
        android:background="@drawable/edttext_conmarcos"
        />
    <ImageButton
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/btnAceptarContra"

        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/edtCambiarContrados"

        android:src="@drawable/ic_tick_verde_solo"
        android:background="@drawable/edttext_conmarcos"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>