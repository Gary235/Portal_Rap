<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >


    <ImageView
        android:id="@+id/imgperfil"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rec_stroke_negro2"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="*Usuario*"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/imgperfil"
        app:layout_constraintLeft_toRightOf="@+id/imgperfil"
        app:layout_constraintTop_toTopOf="@id/imgperfil" />

    <ImageButton
        android:id="@+id/btneditar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/circulo_azul"
        android:src="@drawable/icono_editar"
        app:layout_constraintLeft_toLeftOf="@id/imgperfil"
        app:layout_constraintRight_toRightOf="@id/imgperfil"
        app:layout_constraintTop_toTopOf="@id/imgperfil" />

    <ImageView
        android:id="@+id/grabado"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:layout_marginTop="50dp"
        android:src="@drawable/ic_icono_grabado"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgperfil" />

    <ImageView
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="10dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/grabado" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:layout_marginTop="9dp"
        android:background="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grabado" />

    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/linea"
        android:layout_marginTop= "20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnfav"
        android:background="@drawable/circulo_gris"

        android:src="@drawable/ic_icono_corazon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="40dp"
        android:elevation="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>