<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtGrande"
        android:textColor="#000"
        android:text="Ya Estas Listo!"
        android:textSize="40dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="500dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChico"
        android:textColor="#808080"
        android:text="Ya puedes empezar a entrenar"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtGrande"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vector"
        android:src="@drawable/ic_tick_completo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:id="@+id/btnAvanzardetodolisto"

        android:text="Entrenar"
        android:textAllCaps="false"
        android:textSize="30dp"

        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/vector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_redondeado_negro"
        android:elevation="20dp"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnAanteriordetodolisto"
        android:background="@drawable/redondeado_stroke_negro_medio_grueso"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnAvanzardetodolisto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Anterior"
        android:textColor="#000"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:elevation="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>