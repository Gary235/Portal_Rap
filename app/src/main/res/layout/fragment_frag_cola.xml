<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_degradado_oscuro">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnVOlverdecola"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"


        android:src="@drawable/ic_flecha_fina_abajo_blanca"
        android:background="@drawable/btn_transparente"
        />

    <TextView
        android:id="@+id/sonando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="115dp"
        android:fontFamily="sans-serif-black"
        android:text="Sonando"
        android:textColor="#fff"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/txtArtistaCola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="ARTISTA"
        android:textColor="#808080"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sonando" />

    <TextView


        android:id="@+id/txtTituloCola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="TITULO"
        android:textColor="#808080"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sonando" />

    <TextView
        android:id="@+id/nombreBeatCola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="Beat #001"
        android:textColor="#04B404"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/txtTituloCola"
        app:layout_constraintTop_toBottomOf="@id/txtTituloCola" />

    <TextView
        android:id="@+id/txtArtistaBeatCola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-black"
        android:text="Artista #001"
        android:textColor="#04B404"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/txtArtistaCola"
        app:layout_constraintTop_toBottomOf="@id/txtArtistaCola" />

    <ImageButton
        android:id="@+id/btnFavdeCola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_transparente"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/nombreBeatCola"
        app:layout_constraintBottom_toBottomOf="@id/nombreBeatCola"
         />


    <TextView
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="276dp"
        android:fontFamily="sans-serif-black"
        android:text="Siguiente"
        android:textColor="#fff"
        android:textSize="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/txtTituloSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="TITULO"
        android:textColor="#808080"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/txtTituloCola"
        app:layout_constraintTop_toBottomOf="@id/siguiente" />

    <TextView

        android:id="@+id/txtArtistaSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="ARTISTA"
        android:textColor="#808080"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/txtArtistaCola"
        app:layout_constraintTop_toBottomOf="@id/siguiente" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/listaSiguiente"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtTituloSiguiente"
        />


</androidx.constraintlayout.widget.ConstraintLayout>