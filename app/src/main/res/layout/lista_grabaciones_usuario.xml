<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/circulo_gris"

    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlaylista"

        android:background="@drawable/btn_transparente"
        android:src="@drawable/ic_icono_play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/textolista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000"

        app:layout_constraintLeft_toRightOf="@id/btnPlaylista"
        app:layout_constraintTop_toTopOf="@id/btnPlaylista"
        app:layout_constraintBottom_toBottomOf="@id/btnPlaylista"
        android:layout_marginLeft="30dp"

        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavlista"

        android:src="@drawable/ic_icono_nofav"
        android:background="@drawable/btn_transparente"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>