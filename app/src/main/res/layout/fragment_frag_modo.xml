<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">


    <androidx.viewpager.widget.ViewPager
        android:layout_width="315dp"
        android:layout_height="240dp"
        android:id="@+id/viewpager2"
        android:elevation="20dp"
        android:translationZ="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="165dp"


        />



    <ImageView
        android:id="@+id/fondo2"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/edttext_conmarcos"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Elegir Modo"
        android:id="@+id/textotitulodeestimulo"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:background="@drawable/ic_paso_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"

        />

    <Button
        android:id="@+id/botoninfodemodo"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:elevation="50dp"
        android:translationZ="1000dp"
        android:text="?"
        android:textSize="14dp"
        android:textColor="#000"

        android:background="@drawable/redondeado_stroke_negro_medio_grueso"
        app:layout_constraintBottom_toBottomOf="@id/textotitulodeestimulo"
        app:layout_constraintRight_toLeftOf="@id/textotitulodeestimulo"
        app:layout_constraintTop_toTopOf="@id/textotitulodeestimulo"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:layout_width="315dp"
        android:layout_height="240dp"

        android:id="@+id/recuadro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="165dp"
        android:background="@drawable/circulo_stroke_negro_grueso"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:translationZ="20dp"
        android:id="@+id/flechitaderecha"
        app:layout_constraintRight_toRightOf="@id/recuadro"
        app:layout_constraintTop_toTopOf="@id/recuadro"
        app:layout_constraintBottom_toBottomOf="@id/recuadro"
        android:background="@drawable/ic_flecha_fina_negra_derecha"
        android:layout_marginRight="30dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:translationZ="20dp"
        android:id="@+id/flechitaizquierda"
        app:layout_constraintRight_toRightOf="@id/recuadro"
        app:layout_constraintTop_toTopOf="@id/recuadro"
        app:layout_constraintBottom_toBottomOf="@id/recuadro"
        android:background="@drawable/ic_flecha_fina_negra_izquierda"
        android:layout_marginRight="280dp"
        />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/botonsiguientedemodo"

        android:elevation="20dp"
        android:translationZ="20dp"
        android:src="@drawable/ic_flecha_blanca_derecha"
        android:layout_marginBottom="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_redondeado_negro"
        />
</androidx.constraintlayout.widget.ConstraintLayout>