<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#EFE8E8"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlaylista"

        android:background="@drawable/btn_transparente"
        android:src="@drawable/ic_icono_play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/nombreBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"

        app:layout_constraintLeft_toRightOf="@id/btnPlaylista"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/btnPlaylista"
        app:layout_constraintBottom_toBottomOf="@id/btnPlaylista"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/nombreArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#000"

        app:layout_constraintTop_toTopOf="@id/btnPlaylista"
        app:layout_constraintLeft_toRightOf="@id/btnPlaylista"
        app:layout_constraintBottom_toBottomOf="@id/btnPlaylista"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavlista"

        android:src="@drawable/ic_icono_nofav"
        android:background="@drawable/btn_transparente"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="30dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>