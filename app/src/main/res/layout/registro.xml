<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_degradado_claro">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"

        android:contentDescription="TODO"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea una cuenta de Portal Rap"
        android:textSize="25dp"
        android:textColor="#000"
        android:id="@+id/text"
        android:fontFamily="@font/helvetica_medium"

        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/editusuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/edttext_conmarcos"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textColorHint="#797777"
        android:hint="Email"
        android:textIsSelectable="true"
        android:paddingStart="20dp"

        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
       />

    <EditText
        android:id="@+id/editcontra"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/edttext_conmarcos"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textColorHint="#797777"
        android:hint="Contraseña"
        android:textIsSelectable="true"
        android:inputType="textPassword"
        android:paddingStart="20dp"

        app:layout_constraintTop_toBottomOf="@id/editusuario"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="215dp"
    />

    <EditText
        android:id="@+id/editconf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"

        android:background="@drawable/edttext_conmarcos"
        android:cursorVisible="true"
        android:singleLine="true"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textColorHint="#797777"
        android:hint="Confirmación"
        android:textIsSelectable="true"
        android:inputType="textPassword"
        android:paddingStart="20dp"

        app:layout_constraintTop_toBottomOf="@id/editusuario"
        android:layout_marginLeft="205dp"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/helvetica_medium"
        android:textSize="15dp"
        android:textColor="#000"
        android:text="La contraseña debe tener al menos, 6 caracteres"
        app:layout_constraintTop_toBottomOf="@id/editcontra"
        app:layout_constraintLeft_toLeftOf="@id/editcontra"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/btn_redondeado_negro"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>