<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nombreBeatCola2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Beat #001"
        android:textColor="#fff"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/btnFavoritoCola2"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginLeft="20dp"
         />

    <TextView

        android:id="@+id/nombreArtistaCola2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Artista #001"
        android:textColor="#808080"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/nombreBeatCola2"
        app:layout_constraintTop_toBottomOf="@id/nombreBeatCola2"
        />

    <ImageButton

        android:id="@+id/btnFavoritoCola2"
        android:layout_width="25dp"
        android:layout_height="23dp"
        android:background="@drawable/btn_transparente"
        android:src="@drawable/ic_icono_nofav_blanco"
        android:scaleType="fitCenter"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/nombreBeatCola2"
        app:layout_constraintBottom_toBottomOf="@id/nombreArtistaCola2"
        />
</androidx.constraintlayout.widget.ConstraintLayout>